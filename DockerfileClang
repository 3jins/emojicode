FROM ubuntu:17.10

RUN DEBIAN_FRONTEND=noninteractive apt-get update && apt-get install -y wget

RUN echo "deb http://apt.llvm.org/artful/ llvm-toolchain-artful-5.0 main" >> /etc/apt/sources.list
RUN echo "deb-src http://apt.llvm.org/artful/ llvm-toolchain-artful-5.0 main" >> /etc/apt/sources.list
RUN wget -O - https://apt.llvm.org/llvm-snapshot.gpg.key| apt-key add -

RUN DEBIAN_FRONTEND=noninteractive apt-get update && apt-get install -y ninja-build python3 clang-5.0 libclang-common-5.0-dev libclang-5.0-dev libclang1-5.0 libclang1-5.0-dbg libllvm5.0 libllvm5.0-dbg lldb-5.0 llvm-5.0 llvm-5.0-dev llvm-5.0-runtime lld-5.0 libfuzzer-5.0-dev libedit-dev cmake liballegro5-dev

RUN mkdir /app
WORKDIR /app

COPY . ./

ENV CC clang-5.0
ENV CXX clang++-5.0
ENV PYTHONIOENCODING utf8
